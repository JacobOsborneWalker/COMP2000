<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First Drop-down (Spinner) -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming holidays to approve:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp" />

    <!-- TextView for displaying user information -->
    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical" />

    <!-- Accept and Decline Buttons for Spinner 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="129dp"
            android:layout_height="64dp"
            android:text="Accept" />

        <Button
            android:id="@+id/declineButton"
            android:layout_width="133dp"
            android:layout_height="68dp"
            android:text="Decline"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- Past Days Off Section -->
    <TextView
        android:id="@+id/pastDaysOffHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Days Off:"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <!-- Layout for Past Days Off -->
    <LinearLayout
        android:id="@+id/pastDaysOffLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical" />

</LinearLayout>
