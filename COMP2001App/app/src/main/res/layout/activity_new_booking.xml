<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking New Holiday" />

        <EditText
            android:id="@+id/LegalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LegalName"
            android:text="Full Name" />

        <EditText
            android:id="@+id/StartDate"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Start Date"
            android:inputType="none"
            android:padding="16dp" />

        <EditText
            android:id="@+id/EndDate"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="End Date"
            android:inputType="none"
            android:padding="16dp" />

        <TextView
            android:id="@+id/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days Booked:"
            android:textSize="16sp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/textViewDateDifference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of days:"
            android:textSize="16sp"
            android:paddingTop="16dp"/>

        <EditText
            android:id="@+id/editTextAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:hint="Add additional information here"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/ReturnButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Return" />

            <Button
                android:id="@+id/VerifyButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Verify" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
